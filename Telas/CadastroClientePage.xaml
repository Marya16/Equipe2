<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Equipe2_1.CadastrarClientePage"
             Title="Cadastrar cliente">

    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Title -->
                <Label Grid.Row="0" 
                       Text="Cadastrar cliente" 
                       FontSize="Large"
                       HorizontalOptions="Center" />

                <!-- Name -->
                <Label Grid.Row="1"
                       Text="Nome:" />

                <Entry Grid.Row="1"  
                       Grid.Column="1"
                       x:Name="NomeEntry" />


                <!-- Surname -->
                <Label Grid.Row="2" 
                       Text="Sobrenome:" />

                <Entry Grid.Row="2" 
                       Grid.Column="1"
                       x:Name="SobrenomeEntry"/>

                <!-- CPF -->
                <Label Grid.Row="3" 
                       Text="CPF:" />

                <Entry Grid.Row="3" 
                       Grid.Column="1" 
                       x:Name="CPFEntry" />

                <!-- Phone -->
                <Label Grid.Row="4" 
                       Text="Telefone:" />

                <Entry Grid.Row="4"  
                       Grid.Column="1" 
                       x:Name="TelefoneEntry"/>

       
                <!-- Register Button -->
                <Button Grid.Row="6" 
                        Text="CADASTRAR-SE"
                        HorizontalOptions="Center"
                        VerticalOptions="End" 
                        Clicked="OnRegister1Clicked" />

                <!-- Already Registered -->
                <StackLayout Grid.Row="7" 
                             Orientation="Horizontal" 
                             HorizontalOptions="Center">


                    <ImageButton Source="user_icon.png" 
                                 Clicked="OnAlreadyRegisteredClicked" />
                    
                     <!--BotÃ£o de Cadastro -->      
        
            <Button Text="Voltar"
                    BackgroundColor="Dodgerblue"
                     Grid.Row="7" 
                    HorizontalOptions="FillAndExpand"
                    Clicked="VoltarClicked"
                    Margin="0,5,0,0"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    TextColor="Black"/>

                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
